<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <TextView
        android:id="@+id/per_day_recycler_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="昨天 7/6"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/per_day_recycler_temperature_tv"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="14sp"
        tools:text="33°/25°"
        android:letterSpacing="0.1"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />

    <ImageView
        android:id="@+id/per_day_recycler_skycon_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:adjustViewBounds="false"
        android:src="@mipmap/weather_few_clouds"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:contentDescription="@string/na" />

    <TextView
        android:id="@+id/per_day_recycler_skycon_tv"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="14sp"
        tools:text="@string/CLOUDY"
        app:layout_constraintTop_toTopOf="@+id/per_day_recycler_skycon_iv"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/per_day_recycler_skycon_iv"
        android:layout_marginBottom="0dp"
        app:layout_constraintLeft_toRightOf="@+id/per_day_recycler_skycon_iv"
        android:layout_marginStart="8dp" />

</android.support.constraint.ConstraintLayout>
