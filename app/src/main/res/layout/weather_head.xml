<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    tools:background="#FF424242">


    <ImageView
        android:id="@+id/lacate_mode_image"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_location_off_black_24dp"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/location_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/na"
        android:shadowColor="@color/colorTextDark"
        android:shadowDx="1.0"
        android:shadowDy="1.0"
        android:shadowRadius="1.0"
        android:textColor="#E0E0E0"
        android:textSize="14sp"
        tools:text="GPS"
        app:layout_constraintTop_toTopOf="@+id/lacate_mode_image"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/lacate_mode_image"
        android:layout_marginBottom="0dp"
        app:layout_constraintLeft_toRightOf="@+id/lacate_mode_image"
        android:layout_marginLeft="4dp"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/location_detail_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:shadowColor="@color/colorTextDark"
        android:shadowDx="1.0"
        android:shadowDy="1.0"
        android:shadowRadius="1.0"
        android:text="@string/na"
        android:textColor="#E0E0E0"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lacate_mode_image"
        tools:text="亚东新城区文苑路" />

    <TextView
        android:id="@+id/last_update_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="0dp"
        android:text="@string/loading"
        android:textColor="#E0E0E0"
        android:textSize="14sp"
        android:shadowColor="@color/colorTextDark"
        android:shadowDx="1.0"
        android:shadowDy="1.0"
        android:shadowRadius="1.0"
        app:layout_constraintBottom_toBottomOf="@+id/location_tv"
        app:layout_constraintLeft_toRightOf="@+id/location_tv"
        app:layout_constraintTop_toTopOf="@+id/location_tv" />
</android.support.constraint.ConstraintLayout>