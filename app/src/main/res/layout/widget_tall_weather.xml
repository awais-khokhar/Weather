<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical"
    android:padding="@dimen/widget_margin"
    tools:background="#FF424242">

    <ImageView
        android:id="@+id/widget_tall_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/widget_card"
        android:visibility="gone"
        tools:ignore="ContentDescription" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@android:color/transparent">

        <LinearLayout
        android:id="@+id/tall_widget_clock"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:weightSum="2"
        android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextClock
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:format12Hour="hh"
            android:format24Hour="HH"
            android:shadowColor="@color/colorTextDark"
            android:shadowDx="1.0"
            android:shadowDy="1.0"
            android:shadowRadius="1.0"
            android:textColor="#fafafa"
            android:textSize="72sp"
            android:fontFamily="@font/s8_clock" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextClock
            android:id="@+id/tall_widget_minute"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:format12Hour="mm"
            android:format24Hour="mm"
            android:shadowColor="@color/colorTextDark"
            android:shadowDx="1.0"
            android:shadowDy="1.0"
            android:shadowRadius="1.0"
            android:textColor="#fafafa"
            android:textSize="72sp"
            android:fontFamily="@font/s8_clock" />

    </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/tall_widget_weather"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5">

        <ImageView
            android:id="@+id/tall_widget_skycon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:src="@mipmap/ic_launcher" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/tall_widget_skycon">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal">

                <TextClock
                    android:id="@+id/tall_widget_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:format12Hour="MM/dd EE"
                    android:format24Hour="MM/dd EE"
                    android:shadowColor="@color/colorTextDark"
                    android:shadowDx="1.0"
                    android:shadowDy="1.0"
                    android:shadowRadius="1.0"
                    android:textColor="#fafafa"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tall_widget_lunar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingStart="7dp"
                    android:shadowColor="@color/colorTextDark"
                    android:shadowDx="1.0"
                    android:shadowDy="1.0"
                    android:shadowRadius="1.0"
                    tools:text="十月廿一"
                    android:textColor="#fafafa"
                    android:textSize="14sp" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tall_widget_skycon">

            <TextView
                android:id="@+id/tall_widget_info"
                style="@style/content_text"
                android:layout_centerHorizontal="true"
                android:maxLines="1"
                android:shadowColor="@color/colorTextDark"
                android:shadowDx="1.0"
                android:shadowDy="1.0"
                android:shadowRadius="1.0"
                android:textAlignment="center"
                android:textColor="@color/colorTextLight"
                tools:text="QIXIA | 28°°"/>

        </RelativeLayout>

    </RelativeLayout>
    </LinearLayout>
</RelativeLayout>