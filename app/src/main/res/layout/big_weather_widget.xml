<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:padding="@dimen/widget_margin"
    tools:background="#FF424242">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextClock
                android:id="@+id/widget_clock_day_clock"
                style="@style/widget_text_clock" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/big_widget_skycon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerInParent="true"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:src="@mipmap/weather_few_clouds"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/big_widget_info"
                style="@style/content_text"
                android:layout_width="match_parent"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/big_widget_skycon"
                android:gravity="right"
                android:paddingEnd="16dp"
                android:maxLines="2"
                android:shadowColor="@color/colorTextGrey"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:text="@string/na"
                android:textColor="@color/colorTextLight"
                tools:ignore="RtlHardcoded"
                tools:text="Partly Could\n21℃" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/big_widget_skycon"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/big_widget_refresh_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:maxLines="1"
                    android:shadowColor="@color/colorTextGrey"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="1"
                    android:text="@string/na"
                    android:textAlignment="gravity"
                    android:textColor="@color/colorTextLight"
                    android:textSize="14sp"
                    tools:ignore="RtlHardcoded"
                    tools:text="18:00" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_refresh_gray_24dp" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/big_widget_description"
                style="@style/content_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:maxLines="1"
                android:shadowColor="@color/colorTextGrey"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:text="未来两小时不会下雨，放心出门吧"
                android:textColor="@color/colorTextLight"
                android:textSize="12sp"
                tools:ignore="RtlHardcoded"
                tools:text="未来两小时不会下雨，放心出门吧" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/big_widget_top"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            tools:ignore="ContentDescription" />

        <ImageButton
            android:id="@+id/big_widget_bottom"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            tools:ignore="ContentDescription" />

    </LinearLayout>

</RelativeLayout>